{
  "openapi": "3.0.1",
  "info": {
    "title": "TrackExpensesApp",
    "version": "v0.2.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "server"
    }
  ],
  "paths": {
    "/api/wallets": {
      "post": {
        "summary": "create new wallet",
        "tags": [
          "Wallets"
        ],
        "operationId": "createWallet",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateWalletDTO"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/WalletDTO"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "get list of all wallets",
        "tags": [
          "Wallets"
        ],
        "operationId": "findAllWallets",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WalletDTO"
                  }
                }
              }
            }
          },
          "400": {
            "description": "An error occurred while retrieving the list of wallets",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "WALLETS_LIST_RETRIEVING_ERROR"
                }
              }
            }
          }
        }
      }
    },
    "/api/wallets/{id}": {
      "put": {
        "summary": "update existing wallet",
        "tags": [
          "Wallets"
        ],
        "operationId": "updateWallet",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateWalletDTO"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/WalletDTO"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "delete wallet",
        "tags": [
          "Wallets"
        ],
        "operationId": "deleteWallet",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/transactions": {
      "get": {
        "summary": "get list of all transactions for specific wallet",
        "tags": [
          "Transactions"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "walletId",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "operationId": "findAllTransactions",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TransactionDTO"
                  }
                }
              }
            }
          },
          "400": {
            "description": "An error occurred while retrieving the list of transactions",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "INCOMES_LIST_RETRIEVING_ERROR"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "create new transaction",
        "tags": [
          "Transactions"
        ],
        "operationId": "createTransaction",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTransactionDTO"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionDTO"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/transactions/{id}": {
      "put": {
        "summary": "update transaction",
        "tags": [
          "Transactions"
        ],
        "operationId": "updateTransaction",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTransactionDTO"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/TransactionDTO"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "delete transaction",
        "tags": [
          "Transactions"
        ],
        "operationId": "deleteTransaction",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UpdateWalletDTO": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 20,
            "minLength": 0,
            "pattern": "[a-z A-Z]+",
            "type": "string"
          }
        }
      },
      "WalletDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "creationDate": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CreateWalletDTO": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 20,
            "minLength": 0,
            "pattern": "[a-z A-Z]+",
            "type": "string"
          }
        }
      },
      "CreateTransactionDTO": {
        "required": [
          "amount",
          "walletId",
          "date"
        ],
        "type": "object",
        "properties": {
          "walletId": {
            "minimum": 1,
            "type": "integer",
            "format": "int64"
          },
          "amount": {
            "minimum": 0,
            "type": "number"
          },
          "date": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "UpdateTransactionDTO": {
        "required": [
          "amount",
          "date"
        ],
        "type": "object",
        "properties": {
          "amount": {
            "minimum": 0,
            "type": "number"
          },
          "date": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "TransactionDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "amount": {
            "type": "integer",
            "format": "float"
          },
          "description": {
            "type": "string",
            "required": false
          },
          "creationDate": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
